{% extends 'base.html.twig' %}

{% block title %}{{ 'page.home.title'|trans }}{% endblock %}

{% block body %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/home.css') }}">
{% endblock %}
<style>
.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
/* Intro card on home */
.intro-card{ margin-top:18px; background: linear-gradient(180deg,#ffffff,#f4fbff); padding:14px 16px; border-radius:12px; box-shadow:0 8px 24px rgba(10,20,40,0.04); }
.intro-text{ margin:0 0 10px; color:var(--muted); }
.skill-badges{ display:flex; gap:8px; flex-wrap:wrap; margin-bottom:10px; }
.badge-skill{ background:rgba(59,130,246,0.08); color:var(--accent); padding:6px 10px; border-radius:999px; font-weight:600; font-size:0.9rem; }
.cta-savoir{ display:inline-block; text-decoration:none; padding:10px 14px; border-radius:10px; background:linear-gradient(90deg,var(--accent),#06b6d4); color:white; font-weight:700; transition:transform .18s ease, box-shadow .18s ease; }
.cta-savoir:hover{ transform:translateY(-3px); box-shadow:0 10px 28px rgba(59,130,246,0.16); }
</style>
<!-- Introduction stylée (re-design) -->
<section class="hero">
    <div class="hero-inner">
        <div class="hero-left">
            <h1 data-i18n="hero.greeting">{{ 'hero.greeting'|trans }}</h1>
            <p class="hero-text" data-i18n="hero.description">{{ 'hero.description'|trans }}</p>
            <!-- Mini profil résumé + compétences rapides -->
            <div class="intro-card">
                <p class="intro-text" data-i18n="intro.text" data-i18n-params='{"name":"Dimitri"}'>{{ 'intro.text'|trans({'%name%':'Dimitri'}) }}</p>
                <div class="skill-badges">
                    <span class="badge-skill">Python</span>
                    <span class="badge-skill">Networking</span>
                    <span class="badge-skill">Web (HTML/CSS)</span>
                    <span class="badge-skill">OSINT / CTF</span>
                </div>
                <a class="cta-savoir" href="/cv" data-i18n="cta.learn_more">{{ 'cta.learn_more'|trans }} →</a>
            </div>
        </div>
    </div>
</section>

<main class="main-content">
    <div class="conteneur1">
        <div class="minicont1" data-i18n="reasons.title">{{ 'reasons.title'|trans }}</div>
        <div class="minicont1" data-i18n="reasons.description">{{ 'reasons.description'|trans }}</div>
    </div>

    <!-- Section Projets & SAE fusionnée -->
    <section id="realisations" class="realisations">
        <h2 data-i18n="projects.title">{{ 'projects.title'|trans }}</h2>
        <p class="realisations-intro" data-i18n="projects.intro">{{ 'projects.intro'|trans }}</p>
        <div class="realisations-explore">
            <a class="a real-explore-btn" href="/realisations"><span data-i18n="projects.explore_all">{{ 'projects.explore_all'|trans }}</span><div class="wave"></div></a>
        </div>
        <div class="realisations-grid">
            <article class="real-card sae">
                <img src="{{ asset('mooc.jpg') }}" alt="SAE1.01 : Hygiène informatique & cybersécurité" />
                <div class="real-body">
                        <h3 data-i18n="sae.sae101.title">{{ 'sae.sae101.title'|trans }} <span class="badge badge-sae">SAE</span></h3>
                        <p data-i18n="sae.sae101.desc">{{ 'sae.sae101.desc'|trans }}</p>
                </div>
                <a class="real-overlay" href="/realisations" aria-label="Voir le détail sur la page dédiée">
                    <span class="overlay-icon"><i class="fas fa-search-plus"></i></span>
                    <span class="overlay-text">Voir le détail sur la page dédiée</span>
                </a>
            </article>
            <article class="real-card sae">
                <img src="{{ asset('/f3.png') }}" alt="SAE12 : S'initier aux réseaux informatiques" />
                <div class="real-body">
                    <h3 data-i18n="sae.sae12.title">{{ 'sae.sae12.title'|trans }} <span class="badge badge-sae">SAE</span></h3>
                    <p data-i18n="sae.sae12.desc">{{ 'sae.sae12.desc'|trans }}</p>
                </div>
                <a class="real-overlay" href="/realisations" aria-label="Voir le détail sur la page dédiée">
                    <span class="overlay-icon"><i class="fas fa-search-plus"></i></span>
                    <span class="overlay-text">Voir le détail sur la page dédiée</span>
                </a>
            </article>
            <article class="real-card sae">
                <img src="https://images.unsplash.com/photo-1461749280684-dccba630e2f6?auto=format&fit=crop&w=400&q=80" alt="SAE Portfolio Web" />
                <div class="real-body">
                    <h3 data-i18n="sae.portfolio.title">{{ 'sae.portfolio.title'|trans }} <span class="badge badge-sae">SAE</span></h3>
                    <p data-i18n="sae.portfolio.desc">{{ 'sae.portfolio.desc'|trans }}</p>
                </div>
                <a class="real-overlay" href="/realisations" aria-label="Voir le détail sur la page dédiée">
                    <span class="overlay-icon"><i class="fas fa-search-plus"></i></span>
                    <span class="overlay-text">Voir le détail sur la page dédiée</span>
                </a>
            </article>
        </div>
    </section>

    <!-- Séparateur visuel entre projets réalisés et loisirs -->
    <div class="section-separator">
        <span>—</span>
    </div>

    <!-- Section Mes loisirs -->
    <section id="loisirs" class="loisirs-cours">
        <h2 data-i18n="hobbies.title">{{ 'hobbies.title'|trans }}</h2>
        <div class="loisirs-grid">
            <article class="loisir-card">
                <img src="{{ asset('rdr2.jpg') }}" alt="Gaming" />
                <div class="loisir-body">
                    <h3 data-i18n="hobby.gaming.title">{{ 'hobby.gaming.title'|trans }}</h3>
                    <p data-i18n="hobby.gaming.desc">{{ 'hobby.gaming.desc'|trans }}</p>
                </div>
            </article>
            <article class="loisir-card">
                <img src="{{ asset('osintctf.png') }}" alt="CTF / OSINT" />
                <div class="loisir-body">
                    <h3 data-i18n="hobby.ctf.title">{{ 'hobby.ctf.title'|trans }}</h3>
                    <p data-i18n="hobby.ctf.desc">{{ 'hobby.ctf.desc'|trans }}</p>
                </div>
            </article>
            <article class="loisir-card">
                <img src="{{ asset('telephone.webp') }}" alt="Réparation téléphone" />
                <div class="loisir-body">
                    <h3 data-i18n="hobby.repair.title">{{ 'hobby.repair.title'|trans }}</h3>
                    <p data-i18n="hobby.repair.desc">{{ 'hobby.repair.desc'|trans }}</p>
                </div>
            </article>
        </div>
    </section>

</main>

<!-- Charger le script local (géré par Webpack/Encore si vous l'utilisez) -->
