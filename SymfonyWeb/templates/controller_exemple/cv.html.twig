{% block javascripts %}
  <script>
    // Small animations to reveal CV sections progressively
    document.addEventListener('DOMContentLoaded', function(){
      // header
      var title = document.querySelector('.title h1');
      var role = document.querySelector('.title .role');
      var contact = document.querySelector('.contact-line');
      if(title) { title.classList.add('animated-fade'); }
      if(role) { role.classList.add('animated-fade'); }
      if(contact) { contact.classList.add('animated-fade'); }

      // panels
      var panels = document.querySelectorAll('.cv-main .panel, .cv-side .panel');
      panels.forEach(function(p, i){
        setTimeout(function(){ p.classList.add('animated-fade'); }, 120 * i + 200);
      });

      // skills stagger
      var cols = document.querySelectorAll('.skills .cols > div');
      cols.forEach(function(c, i){ c.classList.add('animate-delay-' + (i+1)); });

      // timeline items
      var items = document.querySelectorAll('.timeline li');
      items.forEach(function(it, i){ setTimeout(function(){ it.classList.add('animate'); }, 260 * i + 300); });
    });
  </script>
{% endblock %}

